# =====================================================
# POSTGRESQL DATABASE CONFIGURATION
# Add this to your existing .env file
# =====================================================

# Database Type (sqlite or postgresql)
DB_TYPE=postgresql

# PostgreSQL Connection (Supabase or self-hosted)
DB_HOST=db.xxx.supabase.co
DB_PORT=5432
DB_NAME=ai_movie_course
DB_USER=postgres
DB_PASSWORD=your-database-password

# Connection URL (alternative format)
# DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/ai_movie_course

# =====================================================
# TENANT CONFIGURATION
# =====================================================

# Default tenant slug (fallback if no subdomain)
DEFAULT_TENANT_SLUG=buatfilm

# =====================================================
# MIDTRANS CONFIGURATION (Now per-tenant in database)
# =====================================================
# Note: These are only used if tenant doesn't have config in database
# Moving forward, each tenant should have their own Midtrans credentials

# MIDTRANS_ENV=sandbox
# MIDTRANS_SERVER_KEY=SB-Mid-server-XXXXX
# MIDTRANS_CLIENT_KEY=SB-Mid-client-XXXXX
